# ============================================
# WealthIn Backend - OPENAI Configuration
# ============================================
# Use this for FINALS/PRODUCTION demonstrations
# Copy to .env and add your keys

# ===== PRIMARY AI PROVIDER (OPENAI) =====
OPENAI_API_KEY=sk-your_openai_api_key_here
# OPENAI_BASE_URL is not needed (uses OpenAI default)
OPENAI_MODEL=gpt-4o-mini

# For higher quality (more expensive):
# OPENAI_MODEL=gpt-4o
# OPENAI_MODEL=gpt-4-turbo

# For cost efficiency (faster, cheaper):
# OPENAI_MODEL=gpt-3.5-turbo

# Fallback chain (optional):
# OPENAI_MODEL=gpt-4o-mini,gpt-3.5-turbo

# ===== INDIAN AI SERVICES =====
SARVAM_API_KEY=your_sarvam_api_key_here

# ===== OCR SERVICE =====
ZOHO_VISION_CLIENT_ID=your_zoho_client_id
ZOHO_VISION_CLIENT_SECRET=your_zoho_client_secret
ZOHO_VISION_REFRESH_TOKEN=your_zoho_refresh_token

# ===== DATABASE =====
DATABASE_URL=sqlite:///./backend/data/wealthin.db

# ===== SUPABASE (Optional - for cloud sync) =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# ===== SEARCH API =====
DUCKDUCKGO_ENABLED=true

# ===== TOKEN LIMITS =====
# OpenAI has higher limits, adjust as needed
MAX_TOKENS_PER_REQUEST=2000
MAX_CONTEXT_TOKENS=8000

# ===== FEATURE FLAGS =====
ENABLE_WEB_RESEARCH=true
ENABLE_VOICE_INPUT=true
ENABLE_OCR=true

# ===== SERVER CONFIG =====
PORT=8000
HOST=0.0.0.0
DEBUG=false

# ===== COST TRACKING (Optional) =====
# Track OpenAI API usage for budget management
OPENAI_BUDGET_ALERT=10.00  # Alert when spending exceeds $10
OPENAI_HARD_LIMIT=50.00    # Stop requests at $50

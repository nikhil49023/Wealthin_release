# ============================================
# WealthIn Backend - GROQ Configuration
# ============================================
# Use this for development/testing (free, fast)
# Copy to .env and add your keys

# ===== PRIMARY AI PROVIDER (GROQ) =====
OPENAI_API_KEY=gsk_your_groq_api_key_here
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_MODEL=llama-3.3-70b-versatile

# Fallback models (comma-separated, tried in order)
# OPENAI_MODEL=llama-3.3-70b-versatile,llama-3.1-70b-versatile,mixtral-8x7b-32768

# Legacy support (optional, OPENAI_API_KEY takes priority)
GROQ_API_KEY=gsk_your_groq_api_key_here

# ===== SECONDARY PROVIDERS (Optional) =====
# Only used when Groq fails or for specific features
ACTUAL_OPENAI_API_KEY=sk-your_openai_key_here

# ===== INDIAN AI SERVICES =====
SARVAM_API_KEY=your_sarvam_api_key_here

# ===== OCR SERVICE =====
ZOHO_VISION_CLIENT_ID=your_zoho_client_id
ZOHO_VISION_CLIENT_SECRET=your_zoho_client_secret
ZOHO_VISION_REFRESH_TOKEN=your_zoho_refresh_token

# ===== DATABASE =====
DATABASE_URL=sqlite:///./backend/data/wealthin.db

# ===== SUPABASE (Optional - for cloud sync) =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# ===== SEARCH API =====
DUCKDUCKGO_ENABLED=true

# ===== TOKEN LIMITS =====
MAX_TOKENS_PER_REQUEST=1500
MAX_CONTEXT_TOKENS=3000

# ===== FEATURE FLAGS =====
ENABLE_WEB_RESEARCH=true
ENABLE_VOICE_INPUT=true
ENABLE_OCR=true

# ===== SERVER CONFIG =====
PORT=8000
HOST=0.0.0.0
DEBUG=false
